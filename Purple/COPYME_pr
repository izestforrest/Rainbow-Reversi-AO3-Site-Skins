/*My own custom checkboxes - this will span several rules*/
input[type=checkbox] {
  appearance: none;
  -webkit-appearance: none;
  -moz-appearance: none;
  width: 16px;
  height: 16px;
  border: 2px solid #55406A;
  border-radius: .25em;
  font-size: 13px;
  box-shadow: none;
  text-align: center;
  line-height: 1;
  background: #CCB8E0;
  display: inline-flex;
  align-items: center;
  clear: none;
}

input[type="checkbox"]:after {
  content: "L";
  color: transparent;
}

input[type=checkbox]:hover {
  background: #55406A;
  border: 2px inset #CCB8E0;
  color: transparent;
}

input[type=checkbox]:focus {
  outline: 1px dashed #7ED659;
}

input[type=checkbox]:checked {
  background: #7ED659;
  border: 2px outset #CCB8E0;
}

input[type=checkbox]:checked:after {
  font-weight: 700;
  content: "L";
  color: #2A1F34;
  transform: rotate(30deg) scaleX(-1);
  display: inline-block;
  padding: 0 1.5px 1.5px 1px;
  font-family: sans-serif;
}

input[type="checkbox"] + label {
  vertical-align: middle;
}

