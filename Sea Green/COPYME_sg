  -moz-appearance: none;
  width: 14px;
  height: 14px;
  border: 2px solid #25554d;
  border-radius: .25em;
  font-size: 11px;
  box-shadow: none;
  text-align: center;
  line-height: 1;
  background: #B6DED7;
}

input[type=checkbox]:hover {
  background: #23403B;
  border: 2px inset #16332e;
}

input[type=checkbox]:focus {
  outline: 1px dashed #D65e89;
}

input[type=checkbox]:checked {
  background: #25554d;
}

input[type=checkbox]:checked:after {
  font-weight: 700;
  content: "L";
  color: #fff;
  transform: rotate(30deg) scaleX(-1);
  display: inline-block;
  padding: 0;
}

input[type=checkbox] + label {
  vertical-align: middle;
}

